#include <iostream>
using namespace std;

/*Incresing size of array in Heap */

int main()
{
    int *p= new int[5];
    p[0]=1; p[1]=5; p[2]=8; p[3]=11; p[4]=15;
    
    int *q= new int[10];
    
    for(int i=0;i<5;i++)
    {
        q[i]=p[i];
    }
    
    delete []p;
    p = q;
    q = NULL;
    
    p[5]=112; p[6]=115;
    
    for(int i=0;i<5;i++)
    {
        cout<<p[i]<<endl;
    }

}
