#include <iostream>
using namespace std;

/*2D Array */

int main()
{
    /* p is in stack pointing at 2D array in Heap */
    
   int *p[3];
   p[0]= new int[4];
   p[1]= new int[4];
   p[2]= new int[4];
   
   p[0][1] = 16;
   p[2][1] = 161;
   p[2][2] = 126;
   p[1][2] = 6;
   
   cout<<p[2][1]<<endl<<p[0][0];
   
   /* A is in stack pointing at a column that is pointing at a 2D array in Heap */
   
   int **A;
   A = new int *[3];
   A[0]= new int[4];
   A[1]= new int[4];
   A[2]= new int[4];
    
    

}
